@model TestShopAspnet.ViewModels.RegisterUserViewModel

@{
    ViewData["Title"] = "Регистрация";
}

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2>Регистрация</h2>
                    <form asp-action="Register" asp-antiforgery="true">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <span asp-validation-for="Username" class="text-danger"></span>
                        <input asp-for="Username" placeholder="Логин" />

                        <span asp-validation-for="Password" class="text-danger" ></span>
                        <input asp-for="Password" placeholder="Пароль" />

                        <span asp-validation-for="PasswordConfirm" class="text-danger" ></span>
                        <input asp-for="PasswordConfirm" placeholder="Повторите пароль" />

                        <button type="submit" class="btn btn-default">Зарегистрироваться</button>
                    </form>
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section><!--/form-->