@model IEnumerable<TestShopAspnet.Models.Person>

@{
    ViewData["Title"] = "Все сотрудники";
}

<div class="container">

    <h2>Сотрудники магазина</h2>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Возраст</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (TestShopAspnet.Models.Person person in Model)
            {
                <tr>
                    <td>@person.Id</td>
                    <td>@person.Name</td>
                    <td>@person.Surname</td>
                    <td>@person.Age</td>
                    <td><a asp-controller="Main" asp-action="PersonInfo" asp-route-id="@person.Id">Подробнее</a></td>
                </tr>
            }
        </tbody>
    </table>
    <p><a asp-controller="Main" asp-action="Index">&#60;&#60;Main page</a></p>
</div>